<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orangeo"
    tools:context=".CalculateWaitTimeaa">


    <Spinner
        android:id="@+id/statsWanted"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="367dp"
        android:layout_height="43dp"
        android:background="#3084E7"
        android:entries="@array/statsWanted"
        android:popupBackground="@drawable/bedapp"
        android:spinnerMode="dropdown"
        android:textColor="#FFFFFF"
        android:textColorHint="#D3BEBE" />


    <TextView
        android:id="@+id/textView26"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="# Events since Jan 2021:   "
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toBottomOf="@id/statsWanted"/>


    <TextView
        android:id="@+id/tvEvents"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/textView26"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/statsWanted"/>


    <TextView
        android:id="@+id/textView34"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:text="Average Waiting Time (hrs)"
        android:textAlignment="textStart"
        android:layout_marginLeft="20dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView26"
        />
    <TextView
        android:id="@+id/tvAverage"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="30dp"

        app:layout_constraintTop_toBottomOf="@id/tvEvents"
        app:layout_constraintLeft_toRightOf="@id/textView34"
    />
    <TextView
        android:id="@+id/textView23"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Longest Wait Time (hrs)"
        android:textAlignment="textStart"
        android:layout_marginLeft="20dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView34"/>

    <TextView
        android:id="@+id/tvLong"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvAverage"
        app:layout_constraintLeft_toRightOf="@id/textView23"/>


    <TextView
        android:id="@+id/textView22"
        android:text="Shortest Wait time "
        android:layout_width="155dp"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView23"/>

    <TextView
        android:id="@+id/tvShortTxt"
        android:text=" "
        android:layout_width="45dp"
        android:layout_height="30dp"
        app:layout_constraintLeft_toRightOf="@id/textView22"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView23"/>

    <TextView
        android:id="@+id/tvShort"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvLong"
        app:layout_constraintLeft_toRightOf="@id/tvShortTxt"/>



    <TextView
        android:id="@+id/textView31"
        android:text="Longest Id"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView22"/>

    <TextView
        android:id="@+id/tvLongIdd"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvShort"
        app:layout_constraintLeft_toRightOf="@id/textView31"/>

    <TextView
        android:id="@+id/textView30"
        android:text="Shortest Id"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/textView31"/>

    <TextView
        android:id="@+id/tvShorttid"
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:textAlignment="textEnd"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvLongIdd"
        app:layout_constraintLeft_toRightOf="@id/textView30"/>








</androidx.constraintlayout.widget.ConstraintLayout>